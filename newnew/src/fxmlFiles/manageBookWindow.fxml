<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="416.0" prefWidth="683.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxControllers.ManageBookWindow">
    <children>
        <ListView fx:id="shopBookList" layoutX="256.0" layoutY="17.0" prefHeight="339.0" prefWidth="407.0">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem fx:id="editItem" mnemonicParsing="false" onAction="#editItemMenuButton" text="Edit" />
                        <MenuItem fx:id="viewInfoItem" mnemonicParsing="false" onAction="#viewInfoMenuButton" text="View Info" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </ListView>
        <TextField fx:id="bookTitle" layoutX="27.0" layoutY="14.0" prefHeight="26.0" prefWidth="198.0" promptText="Title" />
        <TextArea fx:id="bookDescription" layoutX="27.0" layoutY="294.0" prefHeight="101.0" prefWidth="198.0" promptText="Description" />
        <ComboBox fx:id="bookGenre" layoutX="27.0" layoutY="54.0" prefHeight="26.0" prefWidth="198.0" promptText="Genre" />
        <DatePicker fx:id="bookPublishDate" layoutX="27.0" layoutY="94.0" prefHeight="26.0" prefWidth="198.0" promptText="Publish date" />
        <TextField fx:id="bookPageNumber" layoutX="27.0" layoutY="134.0" prefHeight="26.0" prefWidth="198.0" promptText="Page number" />
        <TextField fx:id="bookEdition" layoutX="27.0" layoutY="174.0" prefHeight="26.0" prefWidth="198.0" promptText="Edition" />
        <Button layoutX="255.0" layoutY="369.0" mnemonicParsing="false" onAction="#addBook" prefHeight="26.0" prefWidth="134.0" text="Add book to shop" />
      <TextField fx:id="bookPrice" layoutX="27.0" layoutY="214.0" prefHeight="26.0" prefWidth="198.0" promptText="Price" />
      <TextField fx:id="bookAuthors" layoutX="27.0" layoutY="254.0" prefHeight="25.0" prefWidth="198.0" promptText="Author(s)" />
      <Button layoutX="407.0" layoutY="370.0" mnemonicParsing="false" onAction="#deleteBook" text="Delete" />
      <Button layoutX="488.0" layoutY="370.0" mnemonicParsing="false" onAction="#refreshBookList" text="Refresh list" />
    </children>
</AnchorPane>
